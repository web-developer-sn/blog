{{>header}}
<div class="container mt-4">
    <div class="row">
        <div class="col-sm-3">
            {{>sidebar}}
        </div>
        <div class="col-sm-9">
            <h1>Dashboard</h1>

            <ul class="list-group">
                <li class="list-group-item"><strong>Name:</strong> {{currentUser.name}}</li>
                <li class="list-group-item"><strong>Email:</strong> {{currentUser.email}}</li>
                <li class="list-group-item">
                    <strong>Image:</strong>
                    <img src="{{currentUser.image}}" class="img-fluid rounded" style="max-width: 120px; height: auto;">
                </li>
                <li class="list-group-item"><strong>Contact Number:</strong> {{currentUser.contact}}</li>
            </ul>
        </div>
    </div>
</div>
{{>footer}}